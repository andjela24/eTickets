@using CS322_eTickets.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Sign up";
}
<div class="row">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }
<div class="register-card">
    <div class="register-card-content">
        <div class="register-card-title">
            <h2>SIGN UP</h2>
            <div class="underline-title"></div>
        </div>
            <form asp-action="Register" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-content" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                <div class="form-border"></div>
                    <label asp-for="EmailAddress" class="form-label"></label>
                <input asp-for="EmailAddress" class="form-content" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <div class="form-border"></div>
                    <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-content" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                <div class="form-border"></div>
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-content" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="form-border"></div>
                    <input id="register-submit-btn" type="submit" value="Sign up" />
            </form>
    </div>
</div>
</div>

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Sign up for a new account</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success my-2" type="submit" value="Sign up" />
                        <a class="btn btn-outline-secondary my-2" asp-controller="Movies" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>